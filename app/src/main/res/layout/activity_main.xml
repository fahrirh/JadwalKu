<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="hasibuan.sabtusore.MainActivity"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/white">


    <LinearLayout
        android:layout_marginTop="-40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            android:orientation="vertical"
            android:gravity="center"
            android:id="@+id/buttonLihatjadwal">
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/calendar"
                android:background="#00000000"
                android:layout_alignTop="@+id/buttonAlarm" />
            <TextView
                android:textStyle="bold"
                android:layout_marginTop="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Jadwal Kuliah"
                android:textColor="@color/radablack"
                android:textSize="11dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="25"
            android:gravity="center"
            android:id="@+id/buttonLihatmk">
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/books"
                android:background="#00000000" />
            <TextView
                android:textStyle="bold"
                android:layout_marginTop="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Mata Kuliah"
                android:textColor="@color/radablack"
                android:textSize="11dp"/>
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="60dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <LinearLayout
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:background="@color/white"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="25"
        android:orientation="vertical"
        android:id="@+id/buttonLihatnote">
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/note"
            android:background="#00000000"/>
        <TextView
            android:textStyle="bold"
            android:layout_marginTop="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Catatan"
            android:textColor="@color/radablack"
            android:textSize="11dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="25"
        android:gravity="center"
        android:id="@+id/buttonAlarm">
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/infor"
            android:background="#00000000"
            />
        <TextView
            android:textStyle="bold"
            android:layout_marginTop="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Info"
            android:textColor="@color/radablack"
            android:textSize="11dp"/>
    </LinearLayout>
    </LinearLayout>


</LinearLayout>